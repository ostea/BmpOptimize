<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ostea.bmpoptimize">
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.matrix.MatrixActivity"/>
        <activity android:name=".activity.matrix.PatImageViewActivity"/>
        <activity android:name=".activity.matrix.RelectedBmpActivity"/>


        <activity android:name=".activity.svg.ShowSVGActivity"></activity>

        <!--图像的色彩处理-->
        <activity android:name=".activity.colordeal.ImageColorActivity"></activity>
        <activity android:name=".activity.colordeal.RGBAcrivity"></activity>
        <activity android:name=".activity.colordeal.ColorMatrixActivity"></activity>
        <activity android:name=".activity.colordeal.ColorPixelsActivity"></activity>
    </application>

</manifest>